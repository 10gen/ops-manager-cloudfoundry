#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Set Golang dependency
export GOROOT=$(cd "/var/vcap/packages/golang" && pwd -P)
export PATH=${GOROOT}/bin:${PATH}

# Build mongodb service adapter
mkdir -p ${BOSH_COMPILE_TARGET}/go/src/github.com/cf-platform-eng
mv ${BOSH_COMPILE_TARGET}/mongodb-service-adapter ${BOSH_COMPILE_TARGET}/go/src/github.com/cf-platform-eng
cd ${BOSH_COMPILE_TARGET}/go/src/github.com/cf-platform-eng/mongodb-service-adapter
export GOPATH=${BOSH_COMPILE_TARGET}/go
go build -o out/mongodb-service-adapter cmd/mongodb-service-adapter/main.go

# Copy mongodb service adapter
mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp -a ${BOSH_COMPILE_TARGET}/go/src/github.com/cf-platform-eng/mongodb-service-adapter/out/mongodb-service-adapter ${BOSH_INSTALL_TARGET}/bin/
