  mongo_ops.plan_id:
   description: "Plan identifier"
  mongo_ops.admin_password:
   description: "Admin password for mongo"
  mongo_ops.engine_version:
     description: "Engine version"
  mongo_ops.replicas:
       description: "Replicas number for each shard"
