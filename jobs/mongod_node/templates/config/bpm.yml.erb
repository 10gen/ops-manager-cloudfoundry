---
processes:
- name: mongod_node
  executable: /var/vcap/packages/mongod-node/bin/mongodb-mms-automation-agent
  args:
    - --config=/var/vcap/jobs/mongod_node/config/local.conf
  persistent_disk: true
  ephemeral_disk: true
  additional_volumes:
    - path: /var/vcap/store/mongodb-data
      writable: true
  unsafe:
    unrestricted_volumes:
      - path: /var/lib/mongodb-mms-automation
        writable: true
        allow_executions: true
      - path: /var/vcap/data/packages/mongod-node/
        writable: true
        allow_executions: true
      - path: /var/vcap/packages/mongod-node/
        writable: true
        allow_executions: true
